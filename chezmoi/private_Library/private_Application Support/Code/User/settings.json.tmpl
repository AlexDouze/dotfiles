{
  "workbench.colorTheme": "Solarized Light",
  "workbench.preferredDarkColorTheme": "Solarized Dark",
  "window.autoDetectColorScheme": true,
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontLigatures.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",
  "files.trimTrailingWhitespace": true,
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },
  "[helm]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "vs-kubernetes": {
    "vs-kubernetes.crd-code-completion": "enabled",
    "vscode-kubernetes.helm-path-mac": "/Users/douze/.vs-kubernetes/tools/helm/darwin-arm64/helm",
    "vscode-kubernetes.minikube-path-mac": "/Users/douze/.vs-kubernetes/tools/minikube/darwin-arm64/minikube"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.minimap.renderCharacters": false,
  "editor.smoothScrolling": true,
  "files.insertFinalNewline": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "githubPullRequests.pullBranch": "never",
  "workbench.iconTheme": "vscode-icons",
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "svelte.enable-ts-plugin": true,
  "projectManager.git.baseFolders": ["~/Codebase/"],
  "editor.renderWhitespace": "none",
  "workbench.startupEditor": "none",
  "githubPullRequests.terminalLinksHandler": "github",
  "explorer.confirmDelete": false,
  "chat.mcp.serverSampling": {
    "Global in Code: taskmaster-ai": {
      "allowedModels": [
        "github.copilot-chat/claude-sonnet-4"
      ]
    }
  },
  "chat.editing.confirmEditRequestRemoval": false,
  "docker.extension.enableComposeLanguageServer": false
}
