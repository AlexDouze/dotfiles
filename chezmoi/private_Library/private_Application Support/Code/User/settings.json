{
  "workbench.colorTheme": "Solarized Light",
  "workbench.preferredDarkColorTheme": "Solarized Dark",
  "window.autoDetectColorScheme": true,
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontLigatures": true,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontLigatures.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",
  "files.trimTrailingWhitespace": true,
  "[yaml]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },
  "[helm]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "vs-kubernetes": {
    "vs-kubernetes.crd-code-completion": "enabled",
    "vscode-kubernetes.helm-path-mac": "/Users/douze/.vs-kubernetes/tools/helm/darwin-arm64/helm",
    "vscode-kubernetes.minikube-path-mac": "/Users/douze/.vs-kubernetes/tools/minikube/darwin-arm64/minikube"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.minimap.renderCharacters": false,
  "editor.smoothScrolling": true,
  "files.insertFinalNewline": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "githubPullRequests.pullBranch": "never",
  "workbench.iconTheme": "vscode-icons",
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "svelte.enable-ts-plugin": true,
  "projectManager.git.baseFolders": ["~/Codebase/"],
  "editor.renderWhitespace": "none",
  "workbench.startupEditor": "none",
  "githubPullRequests.terminalLinksHandler": "github",
  "mcp": {
    "servers": {
      "taskmaster-ai": {
        "command": "npx",
        "args": ["-y", "--package=task-master-ai", "task-master-ai"],
        "env": {
          "ANTHROPIC_API_KEY": "{{ onepasswordRead "op://Private/Chezmoi/OPENAI_AIRNITY_KEY" }}",
          "MODEL": "claude-3-7-sonnet-20250219",
          "MAX_TOKENS": 64000,
          "TEMPERATURE": 0.2,
          "DEFAULT_SUBTASKS": 5,
          "DEFAULT_PRIORITY": "medium"
        },
        "type": "stdio"
      }
    }
  },
  "explorer.confirmDelete": false,
  "chat.mcp.serverSampling": {
    "Global in Code: taskmaster-ai": {
      "allowedModels": [
        "github.copilot-chat/claude-sonnet-4"
      ]
    }
  },
  "chat.editing.confirmEditRequestRemoval": false,
  "docker.extension.enableComposeLanguageServer": false
}
